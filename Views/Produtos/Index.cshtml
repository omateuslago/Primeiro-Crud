@model List<cruudd.Models.Cadastro>

<h2>Cadastros</h2>

<p>
    <a asp-action="Create">Novo Cadastro</a>
</p>

<table border="1" cellpadding="5" cellspacing="0">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Curso</th>
            <th>Semestre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Cadastro in Model)
        {
            <tr>
                <td>@Cadastro.Id</td>
                <td>@Cadastro.Nome</td>
                <td>@Cadastro.Curso</td>
                <td>@Cadastro.Semestre</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@Cadastro.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@Cadastro.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
